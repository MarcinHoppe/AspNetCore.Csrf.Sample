@model AspNetCore.Csrf.Sample.Model.Profile

<h2>Edit profile</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Profile" asp-action="Update" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label asp-for="FirstName" class="col-md-2 control-label">First name</label>
                    <div class="col-md-10">
                        <input asp-for="FirstName" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="LastName" class="col-md-2 control-label">Last name</label>
                    <div class="col-md-10">
                        <input asp-for="LastName" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label">E-mail</label>
                    <div class="col-md-10">
                        <input asp-for="Email" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="BankAccount" class="col-md-2 control-label">Bank account</label>
                    <div class="col-md-10">
                        <input asp-for="BankAccount" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Update</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>